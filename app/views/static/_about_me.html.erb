<script type=text/javascript>
    $( document ).ready( function() {
        // Set up the initial text:
        $( '.change-text' ).html( textHtmlArray[0] );
        $( '.tech-list' ).html( techList[0] );
        setInterval( swapText, 2000, '.change-text', textHtmlArray );
        setInterval( swapText, 2500, '.tech-list', techList );
    });
    const textHtmlArray = [
        "<span class='uk-text-danger'>tech geek.</span>",
        "<span class='uk-text-success'>pet parent.</span>",
        "<span class='uk-text-primary'>music buff.</span>",
        "<span class='uk-text-warning'>horror movie enthusiast.</span>",
        "<span class='uk-text-muted'>Seahawks fan.</span>"
    ];

    const techList = [
        "<span class='uk-text-danger'>Rails.</span>",
        "<span class='uk-text-success'>React ( Next.JS, Remix ).</span>",
        "<span class='uk-text-primary'>Android</span>",
        "<span class='uk-text-warning'>React Native</span>",
        "<span class='uk-text-muted'>Sinatra</span>",
        "<span class='uk-text-muted'>Jenkins</span>",
        "<span class='uk-text-muted'>Docker</span>",
        "<span class='uk-text-muted'>PostgreSQL</span>",
        "<span class='uk-text-muted'>MongoDB</span>",
        "<span class='uk-text-muted'>Redis</span>",
        "<span class='uk-text-muted'>SQLite</span>",
        "<span class='uk-text-muted'>AWS</span>",
        "<span class='uk-text-danger'>Ruby.</span>",
        "<span class='uk-text-success'>JavaScript (EcmaScript/TypeScript).</span>",
        "<span class='uk-text-primary'>Kotlin.</span>",
        "<span class='uk-text-warning'>Python.</span>"
    ];

    let index = 1;
    function swapText( htmlClass, htmlArr ) {
        $( htmlClass ).fadeOut( 500, function() { // Fade out current text
            $( this ).html( htmlArr[ index ] ).fadeIn( 500 ); // Fade in new text
            index += 1; // Update the index
            if ( index === textHtmlArray.length ) {
                index = 0;
            }
        } );
    }
</script>
